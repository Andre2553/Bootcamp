{% extends "layout.njk" %}

{% block content %}
    <form class="card" method="POST" action="/instructors">
        <section 
            class="avatar" 
            style="background: url(https://source.unsplash.com/collection/8353395/500x500) no-repeat center center">
        
        
        </section>
        <section class="details">
            <h3>New Instructor</h3>
             <div class="item">
                <div> Avatar URL</div>
                <div>
               <input type="url" name="avatar_url" placeholder="https://">
                </div>
            
            </div>
            <div class="item">
                <div>Instructor</div>
                <div>
               <input type="text" name="name" placeholder="Name">
                </div>
            
            </div>
            <div class="item">
                <div>Aniversary</div>
                <div>
                <input type="date" name="birthday" id="">
                </div>
            
            </div>
            <div class="item">
                <div>Gender</div>
                <div>
                <span> <input type="radio" name="gender" value="M" checked>Male</span>
                <span> <input type="radio" name="gender" value="F">Female</span>
                </div>
            
            </div>
            <div class="item">
                <div>Skills</div>
                <div>
                <input type="text" name="service" id="" placeholder="Enter your fields and separate them using a comman">
                </div>
            
            </div>
            <button type="submit">Submit</button>
            
        
        </section>
    
    
    </form>
{% endblock  %}
